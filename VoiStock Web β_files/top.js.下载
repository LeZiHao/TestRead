var msnr_active=false;

$(function(){
	$('.voicefilecount').on('click',function(){
		window.location.href='/voicelist/';
	});
	
	$('.voiceuploadnow').on('click',function(){
		window.location.href='/upload/';
	});
	
	$('.pfulltext').hide();
	
	
	$(document).on('click','.tagbtn',function(){
		var v = $(this).data('tagbtn');
		var l = "/voicelist/?search="+encodeURI(v);
		console.log(l);
		window.location.href=l;
	});
	
	
	$('.btn-stocksearch').on('click',function(){
		window.location.href='/stocksearch/';
	});
	
	$('.btn-playlistsearch').on('click',function(){
		window.location.href='/playlist/search.php';
	});
	
	$('.btn-voicesearch').on('click',function(){
		window.location.href='/voicelist/';
	});
	
	$(document).on('click','.openEventModal',function(){
		$('#eventVoiceModal').modal('show');
		return false;
	});
	
	$(document).on('click','.openLoginVoiceModal',function(){
		$('#loginVoiceModal').modal('show');
		return false;
	});
	
	
	
	if (msnr_active) {
		$('.topcontentsArea').masonry('destroy');
	}

	$('.topcontentsArea').imagesLoaded(function(){
		$('.topcontentsArea').masonry({
		  itemSelector: '.grid-item',
		  columnWidth: '.grid-sizer',
		  percentPosition: true
		});
		$('.topcontentsArea').masonry('reloadItems');
		$('.topcontentsArea').masonry('layout');
	});

	msnr_active=true;
	

	$('.top_slick').on('init',function(){
		fix_voicecount_height();
	});

	
	$('.top_slick').slick({
		autoplay: true,
		autoplaySpeed: 5500,
		dots: true
	});
	

	$(window).on('resize',function(){
		fix_voicecount_height();
	});
	
});


function fix_voicecount_height() {
		var count_hight = $('.tile-stats').height();
		var this_height = $('.top_slick').height();
		
			console.log('tile-stats.height='+this_height);
		
		if ( this_height > count_hight) {
			$('.tile-stats').outerHeight(this_height);
		}
		else if (this_height < count_hight) {
			if (count_hight < 120) {
				$('.tile-stats').height(120);
			} else {
				$('.tile-stats').outerHeight(this_height);
			}
			
		}
}


